<!doctype html>
<html lang="en">
  <head>
    <!-- 必须的 meta 标签 -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="https://cdn.jsdelivr.net/npm/@bootcss/www.bootcss.com@0.0.46/dist/ico/favicon.ico">
    <!-- Bootstrap 的 CSS 文件 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- jQuery and JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/app.css">
    <title>查询</title>
  </head>
  <body>
    <div class="mt-3 container-fluid">
      <div class="row">
        <div class="col">
          <div class="alert alert-success" role="alert">
            <b>查询</b>
          </div>
          <form method="GET">
            <div class="form-group">
              <input type="text" name="serial" class="form-control" required hidden value="<%= serial %>">
            </div>
            <div class="form-group">
              <input type="text" name="dos" class="form-control" required hidden value="<%= dos %>">
            </div>
            <div class="form-row">
              <div class="form-group col-10">
                <input type="text" name="code" class="form-control" placeholder="请输入三位有机码" required>
              </div>
              <div class="form-group col-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-search"></i></button>
              </div>
            </div>
          </form>
          <% if( typeof(success) !== "undefined") { %>
            <div class="alert <% if (success) { %> alert-success <% } else { %> alert-danger <% } %>" role="alert">
              <b><%= result %></b>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
